/* pages/search/search.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E6F4FF 0%, #FFFFFF 100%);
  padding-bottom: 40rpx;
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: white;
  border-bottom: 1rpx solid #E6F4FF;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background: #F5F9FF;
  border-radius: 20rpx;
  padding: 0 25rpx;
  margin-right: 20rpx;
  height: 80rpx;
}

.search-icon {
  font-size: 36rpx;
  color: #66B3FF;
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
}

.placeholder {
  color: #999;
}

.clear-btn {
  font-size: 40rpx;
  color: #999;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  margin-left: 10rpx;
}

.search-btn {
  padding: 0 35rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #66B3FF 0%, #3388FF 100%);
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
}

/* 搜索提示 */
.suggestions {
  background: white;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #E6F4FF;
}

.suggestion-item {
  padding: 25rpx 0;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #F5F5F5;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-section {
  margin-top: 20rpx;
}

.suggestion-title {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 15rpx;
}

/* 搜索结果 */
.search-results {
  padding: 0 30rpx;
}

.results-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0 20rpx;
}

.results-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.results-count {
  font-size: 26rpx;
  color: #999;
}

.results-list {
  height: calc(100vh - 300rpx);
}

.result-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #E6F4FF;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 10rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 15rpx;
}

.highlight {
  color: #FF6B6B;
  font-weight: bold;
}

.result-status {
  display: flex;
  gap: 8rpx;
}

.status-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
}

.status-icon.purchased {
  background: #E6F7E6;
  color: #52C41A;
}

.status-icon.read {
  background: #E6F4FF;
  color: #1890FF;
}

.status-icon.intensive {
  background: #FFF7E6;
  color: #FAAD14;
}

.result-author {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 6rpx;
  display: block;
}

.result-type {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  display: block;
}

.result-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 加载提示 */
.loading,
.no-more,
.empty {
  text-align: center;
  padding: 60rpx 30rpx;
  color: #999;
  font-size: 28rpx;
}

.loading-icon {
  font-size: 48rpx;
  margin-bottom: 20rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.3;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}

/* 历史记录 */
.history-section {
  padding: 30rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.history-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.clear-history {
  font-size: 26rpx;
  color: #999;
  text-decoration: underline;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.history-tag {
  padding: 15rpx 25rpx;
  background: #F5F9FF;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #333;
}

/* 热门搜索 */
.hot-section {
  padding: 0 30rpx 30rpx;
}

.hot-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
}

.hot-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.hot-tag {
  padding: 15rpx 25rpx;
  background: linear-gradient(135deg, #FFD6E7 0%, #FFB3D9 100%);
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}