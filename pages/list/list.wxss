/* pages/list/list.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E6F4FF 0%, #FFFFFF 100%);
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: white;
  border-bottom: 1rpx solid #E6F4FF;
  position: sticky;
  top: 0;
  z-index: 100;
}

.filter-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #0066CC;
}

.book-total {
  font-size: 26rpx;
  color: #999;
  margin-left: 15rpx;
  font-weight: normal;
}

.filter-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: #F0F8FF;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #0066CC;
}

.filter-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

/* 筛选标签 */
.filter-tags {
  display: flex;
  flex-wrap: wrap;
  padding: 15rpx 30rpx;
  background: #F8FBFF;
  border-bottom: 1rpx solid #E6F4FF;
}

.filter-tag {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: #E6F4FF;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #0066CC;
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}

.tag-close {
  margin-left: 8rpx;
  font-size: 28rpx;
  color: #999;
  width: 30rpx;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
}

.clear-all {
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  color: #999;
  text-decoration: underline;
}

/* 书籍列表 */
.book-list {
  height: calc(100vh - 200rpx);
  padding: 0 30rpx;
}

.book-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #E6F4FF;
}

.book-cover {
  width: 140rpx;
  height: 180rpx;
  background: linear-gradient(135deg, #C2E5FF 0%, #A0D6FF 100%);
  border-radius: 12rpx;
  margin-right: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.cover-placeholder {
  font-size: 60rpx;
  opacity: 0.7;
}

.book-info {
  flex: 1;
  min-width: 0;
}

.book-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 10rpx;
}

.book-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.book-status {
  display: flex;
  gap: 8rpx;
}

.status-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
}

.status-icon.purchased {
  background: #E6F7E6;
  color: #52C41A;
}

.status-icon.read {
  background: #E6F4FF;
  color: #1890FF;
}

.status-icon.intensive {
  background: #FFF7E6;
  color: #FAAD14;
}

.book-author,
.book-type,
.book-grade {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.book-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
  margin-top: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 加载提示 */
.loading,
.no-more,
.empty {
  text-align: center;
  padding: 60rpx 30rpx;
  color: #999;
  font-size: 28rpx;
}

.loading-icon {
  font-size: 48rpx;
  margin-bottom: 20rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.3;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}

/* 筛选面板遮罩 */
.filter-panel-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.filter-panel {
  background: white;
  width: 100%;
  max-height: 80vh;
  border-radius: 30rpx 30rpx 0 0;
  display: flex;
  flex-direction: column;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #E6F4FF;
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.filter-close {
  font-size: 50rpx;
  color: #999;
  line-height: 1;
  padding: 0 10rpx;
}

.filter-content {
  flex: 1;
  padding: 0 30rpx;
}

.filter-section {
  margin: 30rpx 0;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.filter-option {
  padding: 20rpx 30rpx;
  background: #F5F9FF;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-width: 200rpx;
}

.filter-option.active {
  background: #E6F4FF;
  color: #0066CC;
  font-weight: bold;
}

.option-check {
  color: #0066CC;
  font-weight: bold;
}

.filter-switches {
  background: #F8FBFF;
  border-radius: 16rpx;
  padding: 20rpx;
}

.filter-switch {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #333;
}

.filter-switch:not(:last-child) {
  border-bottom: 1rpx solid #E6F4FF;
}

.filter-actions {
  display: flex;
  padding: 30rpx;
  border-top: 1rpx solid #E6F4FF;
  gap: 20rpx;
}

.filter-btn.reset,
.filter-btn.apply {
  flex: 1;
  padding: 25rpx;
  text-align: center;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.filter-btn.reset {
  background: #F5F5F5;
  color: #666;
}

.filter-btn.apply {
  background: linear-gradient(135deg, #66B3FF 0%, #0066CC 100%);
  color: white;
}

/* 停止事件冒泡 */
.stopPropagation {
  /* 空样式，仅用于catchtap */
}

/* 调试按钮 */
.debug-btn {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(0, 102, 204, 0.8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: white;
  z-index: 9999;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}