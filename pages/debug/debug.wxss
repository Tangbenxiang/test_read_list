.container {
  padding: 40rpx 30rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #E6F4FF 0%, #FFFFFF 100%);
}

.title {
  display: block;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #A0D6FF;
}

.card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.value {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  word-break: break-all;
}

.status {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: bold;
}

.status.admin {
  background: #52C41A;
  color: white;
}

.status.not-admin {
  background: #FF4D4F;
  color: white;
}

.btn {
  margin-top: 30rpx;
  padding: 25rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  transition: all 0.3s;
  border: none;
}

.btn:active {
  opacity: 0.8;
}

.add-btn {
  background: linear-gradient(135deg, #FA8C16 0%, #FFA940 100%);
  color: white;
}

.add-btn.disabled {
  background: #D9D9D9;
  color: #999;
}

.copy-btn {
  background: linear-gradient(135deg, #1890FF 0%, #66B3FF 100%);
  color: white;
}

.back-btn {
  background: #F5F5F5;
  color: #666;
}